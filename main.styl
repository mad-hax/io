@import url('https://fonts.googleapis.com/css?family=Inconsolata|Indie+Flower|Oxygen')

bg-color = lighten(black, 10%) //lighten(black, 20%) //darken(#427A82, 20%) //#407F7F //#489174 //#364754
side-bg-color = darken(#87BC5E, 20%)
// glow-color = #c95c5c
// glow-color = darken(rgb(176, 202, 219), 10%)
glow-color = lighten(#9dd68d, 10%)
glow-hl-color = lighten(glow-color, 35%)//lighten(rgb(61, 146, 201), 0%)

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

html, body
  background bg-color

a
  text-decoration none
  color glow-color
  // color rgb(61, 146, 201)

a:hover,
a:focus
  text-decoration underline

h3
  font-weight 100

.pure-img-responsive
  max-width 100%
  height auto

#layout
  padding 0

.header
  text-align center
  top auto
  margin 3em auto

.sidebar
  // background side-bg-color //rgb(61, 79, 93)
  // background url(images/footer_lodyas/footer_lodyas.png)
  background url(images/stardust/stardust_@2X.png)
  color #fff

.brand-title,
.brand-tagline
  margin 0

.brand-title
  // color bg-color
  color lighten(#fff, 20%)
  font-family 'Indie Flower', cursive
  text-transform lowercase
  // text-transform uppercase
  font-size 3em

.brand-tagline
  font-weight 300
  color rgb(176, 202, 219)

.nav-list
  margin 0
  padding 0
  list-style none

.nav-item
  display inline-block
  *display inline
  zoom 1

.nav-item a
  background transparent
  border 2px solid glow-color
  color lighten(#fff, 20%)
  margin-top 1em
  letter-spacing 0.05em
  text-transform uppercase
  font-size 85%

  &:hover,
  &:focus
    border 2px solid glow-hl-color //rgb(61, 146, 201)
    text-decoration none

.content-subhead
  text-transform uppercase
  color glow-color //darken(#aaa, 20%)
  border-bottom 1px solid glow-color //#eee
  padding 0.4em 0
  font-size 80%
  font-weight 500
  letter-spacing 0.1em

.content
  background bg-color
  padding 2em 1em 0

.post
  padding-bottom 2em

.post-title
  // font-family 'Inconsolata', monospace
  // font-family 'Oxygen', sans-serif
  font-size 2em
  color #aaa //darken(glow-color, 25%) //#aaa
  margin-bottom 0.2em

.post-avatar
  border-radius 50px
  float right
  margin-left 1em

.post-description
  // font-family Georgia, "Cambria", serif
  font-family 'Oxygen', sans-serif
  color darken(#fff, 40%)
  line-height 1.8em

.post-meta
  color #999
  font-size 90%
  margin 0

.post-category
  margin 0 0.1em
  padding 0.3em 1em
  color #fff
  background #999
  font-size 80%

.post-category-design
  background #5aba59

.post-category-pure
  background #4d85d1

.post-category-yui
  background #8156a7

.post-category-js
  background #df2d4f

.post-images
  margin 1em 0

.post-image-meta
  margin-top -3.5em
  margin-left 1em
  color #fff
  text-shadow 0 1px 1px #333

.footer
  text-align center
  padding 1em 0

.footer a
  color #ccc
  font-size 80%

.footer .pure-menu a:hover,
.footer .pure-menu a:focus
  background none

@media (min-width 48em)
  .content
    padding 2em 3em 0
    margin-left 25%

  .header
    margin 80% 2em 0
    text-align right

  .sidebar
    position fixed
    top 0
    bottom 0
