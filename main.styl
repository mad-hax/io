.footer
  text-align center
  padding 1em 0

.footer a
  color #ccc
  font-size 80%

.footer .pure-menu a:hover,
.footer .pure-menu a:focus
  background none

@media (min-width 48em)
  .content
    padding 2em 3em 0
    margin-left 25%

  .header
    margin 80% 2em 0
    text-align right

  .sidebar
    position fixed
    top 0
    bottom 0
